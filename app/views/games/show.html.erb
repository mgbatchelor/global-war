<%= link_to 'Back', games_path %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4>
      <%= @game.name %>
      <small>by: <%= @game.owner.email %></small>
    </h4>
  </div>
  <div class="panel-body">
    <div class="row-fluid">
      <strong>Players</strong>
      <ol>
        <% @game.users.each do |user| %>
           <li><%= user.email %></li>
        <% end %>
      </ol>
    </div>
  </div>
</div>
